<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dipen.fragmenttest.activities.LauncherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD\nADD Test"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/add_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <Button
            android:id="@+id/replace_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REPLACE\nREPLACE Test"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/replace_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_replace_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.ADD 2.ADD 3.ADD 4.REPLACE\nADD &amp; REPLACE Test"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/add_replace_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"></FrameLayout>
    </LinearLayout>
</LinearLayout>
